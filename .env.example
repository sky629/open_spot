# Open-Spot 로컬 개발환경 환경변수 예시 파일
# 이 파일을 .env로 복사한 후 실제 값으로 변경하세요: cp .env.example .env

# Google OAuth2 설정
# Google Cloud Console에서 발급받은 OAuth2 클라이언트 ID/Secret
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# JWT 설정
# 개발용: 임의의 긴 문자열, 운영용: 보안된 랜덤 키 사용
JWT_SECRET=open-spot-jwt-secret-key-for-local-development-change-in-production

# 데이터베이스 설정 (Docker 기본값)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=openspot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis 설정 (Docker 기본값)
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka 설정 (Docker 기본값)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# 서비스 호스트 설정 (Gateway에서 사용)
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=8081
LOCATION_SERVICE_HOST=localhost
LOCATION_SERVICE_PORT=8082

# Frontend
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_AUTH_SUCCESS_PATH=/login
FRONTEND_AUTH_ERROR_PATH=/login/error